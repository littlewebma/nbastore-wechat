/*轮播图*/
.slide-image{
  height:150px;
  width:100%
}


.container{
  padding:0;
  margin:0
}
/*tab切换*/
.scroll_box{
  width:100%;
  height:50px;
  background: lightblue
}
.huadong{
  width:100%;
  height:20px;
  text-align:center
}
.scroll-view_x{
  width: 100%;
  height:38px;
  background:yellow;
  white-space: nowrap;
}
.scroll-item{
width: 99px;
height:35px;
text-align:center;
line-height:35px;
display:inline-block;
border:1px solid red
}
.default{
color: #000;
}
.red{
color: #ea3e39;
border-bottom: 1px solid #ea3e39;
}
.show{
display:block;
text-align:center;
height: 100%;
width:100%
}
.hidden{
display:none;
text-align:center;
height: 100%;
}

/*商品*/
.store-item{
  width:45%;
  height:190px;
  float:left;
  font-size:12px;
  border:1px solid blue;
  margin:10px 0 0 10px;
}
.store-item text{
  display:block;
  margin-top:10px
}
.store-item text:nth-of-type(2){
  font-size:10px;
  color:blue;
  text-align:left;
  margin-top:15px
}
.store-item image{
  width:100%;
  height:100px
}